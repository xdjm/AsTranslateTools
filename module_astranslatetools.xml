      <bootclasspath refid="astranslatetools.module.bootclasspath"/>
      <classpath refid="astranslatetools.module.production.classpath"/>
      <src refid="astranslatetools.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.astranslatetools"/>
    </javac2>
    
